@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="main-wrapper">
	<div class="container-fuild">
		<div class="w-100 overflow-hidden position-relative flex-wrap d-block vh-100">
			<div class="row justify-content-center align-items-center vh-75 overflow-auto flex-wrap ">
				<div class="col-md-4 mx-auto vh-100">
					<div class="vh-75 d-flex flex-column justify-content-between p-4 pb-0">
						<div class=" mx-auto mb-5 text-center">
							<h4 style="color:#F37438;">MEDICS ARCHIVE</h4>
						</div>
						<div class="card p-4">
							<div class="text-center mb-3">
								<h2 class="mb-2">Sign In</h2>
								<p class="mb-0">Please enter your details to sign in</p>
							</div>
							<div class="mb-3">
								<label class="form-label">Email Address</label>
								<div class="input-group">
									<input type ="email" name="email" id="email" class="form-control border-end-0">
									<span class="input-group-text border-start-0">
										<i class="ti ti-mail"></i>
									</span>
								</div>
							</div>
							<div class="mb-3">
								<label class="form-label">Password</label>
								<div class="pass-group">
									<input type="text" name="password" id="password" class="pass-input form-control">
									<span class="ti toggle-password ti-eye-off"></span>
								</div>
							</div>
							<div class="d-flex align-items-center justify-content-between mb-3">
								<div class="d-flex align-items-center">
									<div class="form-check form-check-md mb-0">
										<input class="form-check-input" id="remember_me" type="checkbox">
										<label for="remember_me" class="form-check-label mt-0">Remember Me</label>
									</div>
								</div>
								<div class="text-end">
									<a href="forgot-password-3.html" class="link-danger">Forgot Password</a>
								</div>
							</div>
							<div class="mb-3">
								<button type="submit" id="submit_btn" onclick="login()" class="btn btn-primary w-100">Sign In</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>